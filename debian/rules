#!/usr/bin/make -f

export DH_VIRTUALENV_ARGUMENTS=--python python3 --system-site-packages
export DH_VIRTUALENV_INSTALL_ROOT=/usr/lib

DESTDIR = $(CURDIR)/debian/hades

%:
	dh $@ --buildsystem=dh_virtualenv

override_dh_auto_clean:
	dh_auto_clean
	make -rf configure.mk clean

override_dh_auto_configure:
	make -rf configure.mk prefix=/usr libexecdir=/usr/lib sysconfdir=/etc localstatedir=/var pkglocalstatedir=/var/lib/hades runstatedir=/run
	dh_auto_configure

override_dh_auto_build:
	dh_auto_build

override_dh_builddeb:
	dh_builddeb -- -Zgzip -z3
