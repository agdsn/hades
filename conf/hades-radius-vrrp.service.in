[Unit]
Description=Hades VRRP service for RADIUS services (keepalived)
Documentation=https://agdsn.github.io/hades/
After=hades-root-netns.service
BindsTo=hades-root-netns.service

[Service]
Type=dbus
BusName=@RADIUS_VRRP_DBUS_NAME@
PIDFile=@pkgrunstatedir@/radius-vrrp/keepalived.pid
KillMode=process
SyslogIdentifier=hades-radius-vrrp
EnvironmentFile=@systemdenvfile@
ExecStartPre=@bindir@/hades-generate-config keepalived/radius.conf.j2 @pkgrunstatedir@/radius-vrrp/keepalived.conf
ExecStart=@KEEPALIVED@ --log-console --vrrp --use-file=@pkgrunstatedir@/radius-vrrp/keepalived.conf --pid=@pkgrunstatedir@/radius-vrrp/keepalived.pid --vrrp_pid=@pkgrunstatedir@/radius-vrrp/keepalived-vrrp.pid $RADIUS_KEEPALIVED_OPTS
ExecReload=@bindir@/hades-generate-config keepalived/radius.conf.j2 @pkgrunstatedir@/radius-vrrp/keepalived.conf
ExecReload=@KILL@ -HUP $MAINPID
Restart=always
RestartSec=5
;RuntimeDirectoryPreserve is not yet supported on Stretch's systemd
;RuntimeDirectory=hades/radius-vrrp
;RuntimeDirectoryMode=0750
;RuntimeDirectoryPreserve=yes

[Install]
WantedBy=hades.target
