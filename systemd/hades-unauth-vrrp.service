[Unit]
Description=Hades VRRP service for unauth services (keepalived)
Documentation=https://agdsn.github.io/hades/
#PartOf=hades.target
After=hades-network.service
Wants=hades-network.service

[Service]
Type=forking
PIDFile=/run/hades/unauth-vrrp/keepalived.pid
KillMode=process
SyslogIdentifier=hades-unauth-vrrp
EnvironmentFile=/etc/default/hades
ExecStartPre=/usr/bin/python3 -m hades.bin.generate_config unauth-keepalived.conf.j2 /run/hades/unauth-vrrp/keepalived.conf
ExecStart=/sbin/ip netns exec unauth /usr/sbin/keepalived --log-console --vrrp --use-file=/run/hades/unauth-vrrp/keepalived.conf --pid=/run/hades/unauth-vrrp/keepalived.pid --vrrp_pid=/run/hades/unauth-vrrp/keepalived-vrrp.pid
ExecReload=/usr/bin/python3 -m hades.bin.generate_config unauth-keepalived.conf.j2 /run/hades/unauth-vrrp/keepalived.conf
ExecReload=/bin/kill -HUP $MAINPID
Restart=always
RestartSec=5
