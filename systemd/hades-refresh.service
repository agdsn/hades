[Unit]
Description=Hades refresh task (Service)
Documentation=https://agdsn.github.io/hades/
PartOf=hades.target
After=hades-networking.service hades-database.service
Wants=hades-networking.service hades-database.service

[Service]
Type=oneshot
User=hades-agent
Group=hades-agent
SyslogIdentifier=hades-refresh
ExecStart=/usr/bin/python3 -m hades.bin.refresh
