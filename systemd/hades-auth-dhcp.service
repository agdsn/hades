[Unit]
Description=Hades DHCP service for authenticated users (dnsmasq)
Documentation=https://agdsn.github.io/hades/
#PartOf=hades.target
After=hades-network.service
Wants=hades-network.service

[Service]
Type=dbus
BusName=de.agdsn.hades.auth_dnsmasq
SyslogIdentifier=hades-auth-dhcp
EnvironmentFile=/etc/default/hades
ExecStartPre=/opt/hades/bin/python3 -m hades.bin.generate_config auth-dnsmasq.conf.j2 /run/hades/auth-dhcp/dnsmasq.conf
ExecStart=/sbin/ip netns exec auth /usr/sbin/dnsmasq -k --enable-dbus=de.agdsn.hades.auth_dnsmasq --conf-file=/run/hades/auth-dhcp/dnsmasq.conf
ExecReload=/opt/hades/bin/python3 -m hades.bin.generate_config auth-dnsmasq.conf.j2 /run/hades/auth-dhcp/dnsmasq.conf
ExecReload=/bin/kill -HUP $MAINPID
Restart=always
RestartSec=5
